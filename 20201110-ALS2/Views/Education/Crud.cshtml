@model EducationCRUDViewModel

<div class="mt-3">
  <div class="text-center">
    <h2 class="text-white">Opret en ny uddannelse</h2>
  </div>

  <form asp-controller="Education" asp-action="@(ViewBag.action == "create" ? "Create" : "Edit")">
    <table class="w-100 border mt-3 text-white">
      <tbody>
        <tr class="row p-4">
          <td class="col-2">
            <h3>Navn:</h3>
          </td>
          <td class="col-5">
            @if (ViewBag.action == "edit") {
              <input type="hidden" asp-for="@Model.Education.EducationId" />
            }
            <input class="w-100 h3" type="text" asp-for="Education.Name" value="@(ViewBag.action == "edit" ? Model.Education.Name : "")" />
          </td>
          <td class="col-4">
            <span class="text-danger h5" asp-validation-for="Education.Name"></span>
          </td>
        </tr>
      </tbody>
    </table>

    <div class="text-center">
      <input class="btn btn-lg bg-success font-weight-bold text-white mt-5 w-25 mr-4" style="height: 75px" type="submit" value="@(ViewBag.action == "create" ? "Opret" : "Ret")" />
      <input class="btn btn-lg bg-danger font-weight-bold text-white mt-5 w-25" style="height: 75px" type="button" onclick="location.href = '@Url.Action("Overview", "Education")'" value="Annuller" />
    </div>
  </form>
</div>






















<style>
  .input-validation-error {
    border-color: red;
    background-color: #fee;
  }
</style>