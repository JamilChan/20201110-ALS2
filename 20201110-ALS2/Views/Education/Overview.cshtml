@model IEnumerable<Education>

<div class="mt-3">
  <div class="text-center">
    <h2 class="text-white">Uddannelser</h2>
  </div>

  <div class="container">
    <table class="table table-striped bg-white">
      <thead>
        <tr>
          <th>Navn på uddannelsen</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        @foreach (Education education in Model) {
          <tr>
            <td class="w-75">@education.Name</td>
            <td>
              <form asp-controller="Education" asp-action="Delete">
                <input type="hidden" name="educationId" value="@education.EducationId" />
                <a class="btn btn-warning text-dark" asp-controller="Education" asp-action="Edit" asp-route-educationId="@education.EducationId">Rediger</a>
                @*<input class="btn btn-danger" type="submit" value="Slet" />*@
              </form>
            </td>
          </tr>
        }
      </tbody>
    </table>
    
    <div class="text-center">
      <a class="btn btn-lg bg-success font-weight-bold text-white mt-3 w-25" style="padding-top: 20px; padding-bottom: 20px" asp-controller="Education" asp-action="Create" asp-route-crud="create">Opret en ny Uddannelse</a>
    </div>
  </div>
</div>