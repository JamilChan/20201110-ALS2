@model ChangePassword

@{
  ViewBag.Title = "Ændre kodeord";
}

<div class="container text-white">
  <div class="row">
    <div class="col-md-12">
      <form asp-action="EditPassword" method="post">
        <div class="form-group">
          <label asp-for="CurrentPassword">Nuværende kodeord</label>
          <span class="text-danger" asp-validation-for="CurrentPassword"></span>
          <input class="form-control" asp-for="CurrentPassword" />
        </div>
        <div class="form-group">
          <label asp-for="NewPassword">Nyt kodeord</label>
          <span class="text-danger" asp-validation-for="NewPassword"></span>
          <input class="form-control" asp-for="NewPassword" />
        </div>
        <div class="form-group">
          <label asp-for="ConfirmPassword">Bekræft nyt kodeord</label>
          <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
          <input class="form-control" asp-for="ConfirmPassword" />
        </div>

        <div class="text-center">
          <button class="btn btn-lg btn-success" type="submit">Gem</button>
          <a class="btn btn-lg btn-light" asp-action="Index" asp-controller="Home">Annuller</a>
        </div>

      </form>
    </div>
  </div>
</d>


