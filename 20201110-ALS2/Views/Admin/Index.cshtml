@model IQueryable<Educator>
@{
  ViewBag.Title = "Undervisere";
  Layout = "_AdminLayout";
}

<html>
<head>
  <meta name="viewport" content="width-device-width" />
  <title>Undervisere</title>
</head>
<style>
  body {
    background-color: darkgray;
  }
</style>
<body>
  <table class="table table-striped table-bordered table-sm">
    <tr>
      <th class="text-right">Id</th>
      <th>Navn</th>
      <th class="text-right">Rolle</th>
      <th class="text-center">Handlinger</th>
    </tr>

    @foreach (Educator educator in Model) {
      <tr>
        <td class="text-right">@educator.EducatorId</td>
        <td>@educator.Name</td>
        <td class="text-right"></td>
        <td class="text-center">
          <form asp-action="Delete" method="post">
            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-educatorId="@educator.EducatorId">Edit</a>
            <input type="hidden" name="EducatorId" value="@educator.EducatorId" />
            <button class="btn btn-sm btn-info" type="submit">Delete</button>
          </form>
        </td>
      </tr>
    }
  </table>

  <div class="text-center">
    <a class="btn btn-lg btn-success" asp-action="Create">Tilføj Underviser</a>
  </div>
</body>
</html>

