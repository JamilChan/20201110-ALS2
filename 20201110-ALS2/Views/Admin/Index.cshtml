@model IEnumerable<Educator>

@{
  ViewBag.Title = "Undervisere";
}

<div class="container">
  <table class="table table-striped table-bordered table-sm bg-white">
    <tr>
      <th class="text-right">Id</th>
      <th>Navn</th>
      <th></th>
    </tr>

    @foreach (Educator educator in Model) {
      <tr>
        <td class="text-right">@educator.EducatorId</td>
        <td class="w-75">@educator.Name</td>
        <td class="text-center">
          <form asp-action="DeleteEducator" method="post">
            <a class="btn btn-sm btn-primary" asp-action="EditEducator" asp-route-educatorId="@educator.EducatorId">Rediger</a>
            <input type="hidden" name="EducatorId" value="@educator.EducatorId"/>
            <button class="btn btn-sm btn-info" type="submit">Slet</button>
          </form>
        </td>
      </tr>
    }
  </table>

  <div class="text-center">
    <a class="btn btn-lg btn-success" asp-action="CreateEducator">Tilføj Underviser</a>
  </div>
</div>


