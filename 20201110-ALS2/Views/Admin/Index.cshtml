@model EducatorsViewModel
@inject RoleManager<IdentityRole> RoleManager
@inject UserManager<IdentityUser> UserManager

@{
  ViewBag.Title = "Undervisere";
  Layout = "_AdminLayout";
}

<html>
<head>
  <meta name="viewport" content="width-device-width" />
  <title>Undervisere</title>
</head>
<style>
  body {
    background-color: darkgray;
  }
</style>
<body>
  <table class="table table-striped table-bordered table-sm">
    <tr>
      <th class="text-right">Id</th>
      <th>Navn</th>
      <th class="text-center">Handlinger</th>
    </tr>

    @foreach (Educator educator in Model.AllEducators) {
      <tr>
        <td class="text-right">@educator.EducatorId</td>
        <td>@educator.Name</td>
        <td class="text-center">
          <form asp-action="DeleteEducator" method="post">
            <a class="btn btn-sm btn-primary" asp-action="EditEducator" asp-route-educatorId="@educator.EducatorId">Rediger</a>
            <input type="hidden" name="EducatorId" value="@educator.EducatorId"/>
            @*<input type="hidden" name="userId" value="@Model.AllUserIds"/>*@
            <button class="btn btn-sm btn-info" type="submit">Slet</button>
          </form>
        </td>
      </tr>
    }
  </table>

  <div class="text-center">
    <a class="btn btn-lg btn-success" asp-action="CreateEducator">Tilføj Underviser</a>
  </div>
</body>
</html>

