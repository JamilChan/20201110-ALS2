@model RegisterEducatorViewModel

@{
  ViewBag.Title = "Opret Underviser";
  Layout = "_AdminLayout";
}

<html>
<head>
  <meta name="viewport" content="width-device-width" />
  <title>Undervisere</title>
</head>
<style>
  body {background-color: darkgray;} 
</style>
<body>
  <form asp-action="Create" method="post">
    <div class="form-group">
      <label asp-for="Educator.Name"></label>
      <div><span class="text-danger" asp-validation-for="Educator.Name"></span></div>
      <input asp-for="Educator.Name" class="form-control" />
    </div>
    <div class="form-group">
      <label asp-for="LoginModel.Name">Username</label>
      <div><span class="text-danger" asp-validation-for="LoginModel.Name"></span></div>
      <input asp-for="LoginModel.Name" class="form-control" />
    </div>
    <div class="form-group">
      <label asp-for="LoginModel.Password"></label>
      <div><span class="text-danger" asp-validation-for="LoginModel.Password"></span></div>
      <input asp-for="LoginModel.Password" class="form-control" />
    </div>
    <div class="form-group">
      <label asp-for="RoleName">Rolle</label>
      <div><span class="text-danger" asp-validation-for="RoleName"></span></div>
      <input asp-for="RoleName" class="form-control" />
    </div>

    <div class="text-center">
      <button class="btn btn-lg btn-success" type="submit">Gem</button>
      <a class="btn btn-lg btn-light" asp-action="Index">Cancel</a>
    </div>
  </form>
</body>
</html>