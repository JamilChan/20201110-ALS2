@model RegisterEducatorViewModel
@inject RoleManager<IdentityRole> RoleManager

@{
  ViewBag.Title = "Opret Underviser";
  Layout = "_AdminLayout";
}

<html>
<head>
  <meta name="viewport" content="width-device-width" />
  <title>Undervisere</title>
</head>
<style>
  body {
    background-color: darkgray;
  }
</style>
<body>
  <form asp-action="CreateEducator" method="post">
    <div class="form-group">
      <label asp-for="Educator.Name"></label>
      <div><span class="text-danger" asp-validation-for="Educator.Name"></span></div>
      <input class="form-control" asp-for="Educator.Name" />
    </div>
    <div class="form-group">
      <label asp-for="LoginModel.Name">Username</label>
      <div><span class="text-danger" asp-validation-for="LoginModel.Name"></span></div>
      <input class="form-control" asp-for="LoginModel.Name" />
    </div>
    <div class="form-group">
      <label asp-for="LoginModel.Password"></label>
      <div><span class="text-danger" asp-validation-for="LoginModel.Password"></span></div>
      <input class="form-control" asp-for="LoginModel.Password" />
    </div>
    @*<div class="form-group">
      <label asp-for="LoginModel.ConfirmPassword"></label>
      <div><span class="text-danger" asp-validation-for="LoginModel.ConfirmPassword"></span></div>
      <input class="form-control" asp-for="LoginModel.ConfirmPassword" />
    </div>*@

    <div class="form-group">
      <label asp-for="RoleName">Rolle</label>
      <br />
      <select asp-for="RoleName">
        <option value=""></option>
        @foreach (IdentityRole role in Model.AllRoles) {
          <option value="@role.Id">@role.Name</option>
        }
      </select>
    </div>

    <div class="text-center">
      <button class="btn btn-lg btn-success" type="submit">Gem</button>
      <a class="btn btn-lg btn-light" asp-action="Index">Annuller</a>
    </div>
  </form>
</body>
</html>