@model RegisterEducatorViewModel
@inject RoleManager<IdentityRole> RoleManager

@{
  ViewBag.Title = "Opret Underviser";
  Layout = "_AdminLayout";
}

<body>
  <form asp-action="CreateEducator" method="post">
    <div class="form-group">
      <label asp-for="Educator.Name"></label>
      <div><span class="text-danger" asp-validation-for="Educator.Name"></span></div>
      <input class="form-control" asp-for="Educator.Name" />
    </div>
    <div class="form-group">
      <label asp-for="Name">Username</label>
      <div><span class="text-danger" asp-validation-for="Name"></span></div>
      <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
      <label asp-for="Password"></label>
      <div><span class="text-danger" asp-validation-for="Password"></span></div>
      <input class="form-control" asp-for="Password" />
    </div>
    <div class="form-group">
      <label asp-for="ConfirmPassword"></label>
      <div><span class="text-danger" asp-validation-for="ConfirmPassword"></span></div>
      <input class="form-control" asp-for="ConfirmPassword" />
    </div>

    <div class="text-center">
      <button class="btn btn-lg btn-success" type="submit">Gem</button>
      <a class="btn btn-lg btn-light" asp-action="Index">Annuller</a>
    </div>
  </form>
</body>
